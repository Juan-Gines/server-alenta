{
  "name": "server-alenta",
  "version": "1.0.0",
  "type": "module",
  "description": "Api rest web Alentà",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=developemnt node --watch src/index.js",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "lint": "eslint .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --silent --runInBand",
    "test:verbose": "npm run test -- --verbose",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [],
  "author": "Juan Ginés Alentà",
  "license": "ISC",
  "dependencies": {
    "@sinclair/typebox": "0.28.20",
    "ajv": "8.12.0",
    "ajv-errors": "3.0.0",
    "ajv-formats": "2.1.1",
    "bcrypt": "5.1.0",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.0",
    "mongoose": "7.1.2",
    "uuid": "9.0.0"
  },
  "imports": {
    "#Config/*": "./src/config/*",
    "#Constants/*": "./src/constants/*",
    "#Controllers/*": "./src/controllers/*",
    "#Routes/*": "./src/routes/*",
    "#Services/*": "./src/services/*",
    "#Auth/*": "./src/middleware/auth/*",
    "#DTO/*": "./src/middleware/dto/*",
    "#Models/*": "./src/models/*",
    "#Errors/*": "./src/middleware/errors/*",
    "#Lang/*": "./src/lang/*",
    "#Utils/*": "./src/utils/*",
    "#Middleware/*": "./src/middleware/*"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.6.1",
    "standard": "17.1.0",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
